{
  "name": "horkihorki/backend",
  "require": {
    "php": "^8.2",
    "slim/slim": "^4.13",
    "slim/psr7": "^1.6",
    "php-di/php-di": "^7.0",
    "vlucas/phpdotenv": "^5.6",
    "monolog/monolog": "^3.6"
  },
  "require-dev": {
    "phpunit/phpunit": "^10.5",
    "squizlabs/php_codesniffer": "^3.10",
    "phpstan/phpstan": "^1.11",
    "robmorgan/phinx": "^0.16"
  },
  "autoload": {
    "psr-4": {
      "App\\": "app/"
    }
  },
  "scripts": {
    "start": "php -S localhost:8080 -t public",
    "migrate": "phinx migrate -c phinx.php",
    "seed": "phinx seed:run -c phinx.php",
    "test": "phpunit",
    "lint": "phpcs --standard=PSR12 app",
    "stan": "phpstan analyse app --level=max"
  }
}
